{{ define "content" }}
<header>
  <h1 class="main-title">Fingel++</h1>
</header>
<main>
  {{ range $i, $chap := .Chapters }}
  <h2 class="chapter" id="chapter-{{ $i }}">{{ $chap.Name }}</h2>
  <ul>
    {{ range $chap.Lessons }}
      <li id="lesson-{{ .Id }}" class="lesson">
        <a href="/lessons/{{ .Id }}">{{ .Name }}</a>
        {{ if $.EditPerms }}
        <a class="edit-btn" href="/lessons/{{ .Id }}/edit"> {{ template "edit.tmpl" . }}</a>
        {{ end }}
        {{ if eq $.LastOpened .Id }}
        <span class="last-opened">Laatst geopend</span>
        {{ end }}
      </li>
    {{end}}
  </ul>
  {{end}}
</main>
{{end}}
