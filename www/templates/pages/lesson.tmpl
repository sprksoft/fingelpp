{{define "title"}}{{ .Lesson.Name }} - Fingel++ {{end}}

{{ define "content" }}
<nav>
  <a href="/#chapter-{{ .ChapterId }}">{{ .ChapterName }}</a> <span>&gt;</span> <a href="/#lesson-{{ .Lesson.Id }}">{{ .Lesson.Name }}</a>

  <button onclick="fetch('/lesson/{{ .Lesson.Id }}/reload', { method: 'POST' }).then(()=>{location.reload()})">Reload</button>
</nav>
<main>
  <h1 class="lesson-name">{{ .Lesson.Name }}</h1>

  <p>
  {{ .Lesson.Content }}
  </p>
</main>

<script>
  localStorage.setItem("lastOpenedLesson", "{{ .Lesson.Id }}")
</script>
{{end}}
